<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>HeadLight - Login</title>
    <link rel="stylesheet" type="text/css" href="login/css/theme.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700,900,300" rel="stylesheet" type="text/css">
</head>
<body role="document" class="login">
    <div id="loginModal" class="modal fade modal-vertical-center" data-backdrop="" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div id="LoginFormMain">
                    <!-- login box -->
                    <div class="login-content">
                        <form id="loginForm" role="form" method="POST">
                            <!-- login content area -->
                            <div class="modal-body clearfix">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input class="form-control" name="loginUserName" id="loginUserName" placeholder="Username" tabindex="1"/>
                                        <label for="loginUserName" class="input-group-addon"><i class="fa fa-user"></i></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="password" class="form-control" name="loginPassword" id="loginPassword" placeholder="Password" tabindex="2"/>
                                        <label for="loginPassword" class="input-group-addon"><i class="fa fa-lock"></i></label>
                                    </div>
                                    <!-- validation/server error response -->
                                    <div id="loginValidateError" class="inline-alert hidden clearfix">
                                        <i class="fa fa-exclamation-triangle icon-large"></i>
                                        <span class="message"></span>
                                    </div>
                                </div>
                                <div class="clearfix">
                                    <button type="submit" class="btn btn-primary pull-right" tabindex="4">Login</button>
                                    <span class="checkbox">
                                        <label for="rememberUser"><input type="checkbox" name="rememberUser" id="rememberUser" tabindex="3"> Remember Me</label>
                                    </span>
                                </div>
                            </div>
                            <!-- forgot password flow -->
                            <div class="modal-footer">
                                <div class="clearfix">
                                    <a id="forgotPasswordToggle"  tabindex="5" class="btn btn-link btn-sm btn-block"> Forgot password?</a>
                                </div>
                            </div>
                        </form>
                     </div>
                    <!-- forgot password box -->
                    <div class="forgot-password-content hidden">
                        <form id="forgotPasswordForm" role="form" method="POST">
                            <!-- forgot password content area -->
                            <div class="modal-body clearfix">
                                <p class="title">Forgot your password?</p>
                                <p>Enter your HeadLight username and we'll email you a link to reset your password.</p>
                                <label for="inputUsername">Username</label>
                                <div class="input-group">
                                    <input type="text" id="inputUsername" class="form-control">
                                    <span class="input-group-btn">
                                        <button id="forgotPasswordSend" class="btn btn-primary" type="submit">Send</button>
                                    </span>
                                </div>
                                <!-- validation/server error response -->
                                <div id="resetValidateError" class="inline-alert hidden clearfix">
                                    <i class="fa fa-exclamation-triangle icon-large"></i>
                                    <span class="message"></span>
                                </div>
                            </div>
                            <!-- forgot password flow -->
                            <div class="modal-footer">
                                <a class="btn btn-link btn-block btn-sm backToLogin"><i class="fa fa-fw fa-chevron-left"></i> Never mind, I remembered!</a>
                            </div>
                        </form>
                    </div>
                    <!-- forgot password confirmation box -->
                    <div class="forgot-password-confirm-content hidden">
                            <!-- forgot password confirmation content area -->
                       <div class="modal-body clearfix">
                            <p class="title">Reset password email sent</p>
                            <p>If there is a corresponding user account, then a password reset link has been sent to the associated email address. Please check your email.</p>
                        </div>
                            <!-- forgot password flow -->
                        <div class="modal-footer">
                            <a class="btn btn-link btn-block btn-sm backToLogin"><i class="fa fa-fw fa-chevron-left"></i> Back to login</a>
                        </div>
                    </div>
                    <!-- reset password with token content area -->
                    <div class="change-password-content hidden">
                        <form id="changePasswordForm" role="form" method="POST">
                            <div class="modal-body clearfix">
                                <p class="title">Change your password</p>
                                <p>Please create a new password which must be at minimum of 5 characters long.</p>
                                <div class="form-group">
                                    <label for="password-one">New Password</label>
                                    <input type="password" name="password-one" id="password-one" class="form-control" required tabindex="1" min="5" />
                                </div>
                                <div class="form-group">
                                    <label for="password-two">Confirm Password</label>
                                    <input type="password" name="password-two" id="password-two" class="form-control" required tabindex="2" min="5" />
                                </div>
                                <!-- validation/server success response -->
                                <div id="changeValidateSuccess" class="inline-success hidden clearfix">
                                    <i class="fa fa-check-circle icon-large"></i>
                                    <span class="message">Password successfully changed!</span>
                                </div>
                                 <!-- validation/server success response when forwarding -->
                                 <div id="changeValidateSuccessWithForward" class="inline-success hidden clearfix">
                                     <i class="fa fa-check-circle icon-large"></i>
                                     <span class="message">Password successfully changed!</span>
                                     <span>You'll automatically be sent back to <a href="" id="forwardPath"></a>
                                         shortly,
                                         or click the link to go there immediately.</span>
                                 </div>
                                <!-- validation/server error response -->
                                <div id="changeValidateError" class="inline-alert hidden clearfix">
                                    <i class="fa fa-exclamation-triangle icon-large"></i>
                                    <span class="message"></span>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <div class="col-xs-6">
                                    <a class="btn btn-default btn-block backToLogin" tabindex="4">Back to login</a>
                                </div>
                                <div class="col-xs-6">
                                    <button class="btn btn-primary btn-block" tabindex="3" type="submit">Change password</button>
                                </div>
                                <!-- the value we submit in form -->
                                <input type="text" id="passwordHash" class="hidden" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="login-terms text-center"><small>By clicking Login you are agreeing to our <a href="/Assets/templates/terms-of-service.html">Terms and Conditions</a>.</small></div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <div class="login-bg"></div>

    <script type="text/javascript">
        // Added to support older ie
        if (typeof(console) === 'undefined') window.console = { log: function() {} };
    </script>
    <script type="text/javascript" src="js/pict.js"></script>
    <script type="text/javascript" src="js/bootstrap.js"></script>
    <script type="text/javascript" src="js/jquery.cookie.js"></script>
    <script type="text/javascript" src="js/login.js"></script>
</body>
</html>
